<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/backIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/back_arrow" />

    <TextView
        android:id="@+id/detailHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/backIcon"
        android:layout_toRightOf="@+id/backIcon"
        android:text="@string/details"
        android:textColor="#6C6C6C"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/heartIcon"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:layout_above="@+id/productImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="149dp"
        android:layout_marginLeft="149dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/detailHeading"
        android:layout_toRightOf="@+id/detailHeading"
        android:background="@drawable/heart_icon" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="322dp"
        android:layout_height="387dp"
        android:layout_below="@+id/detailHeading"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:contentDescription="@string/productDescription"
        android:src="@drawable/big_cactus" />

    <TextView
        android:id="@+id/productHeading"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="133dp"
        android:layout_marginRight="133dp"
        android:text="Samantha Tree"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productHeading"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="3dp"
        android:text="Regular Price $195.00"
        android:textColor="#6C6C6C"
        android:textSize="15sp" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_below="@+id/productPrice"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="11dp"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:backgroundTint="#059033" />

    <TextView
        android:id="@+id/quantityNumber"
        android:layout_width="42dp"
        android:layout_height="38dp"
        android:layout_below="@+id/productPrice"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/addBtn"
        android:layout_toRightOf="@+id/addBtn"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_below="@+id/productPrice"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/quantityNumber"
        android:layout_toRightOf="@+id/quantityNumber"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:backgroundTint="#059033" />

    <TextView
        android:id="@+id/productDescription"
        android:layout_width="378dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
        android:textSize="15sp"
        android:textAlignment="gravity"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/buyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Buy Now"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:backgroundTint="#059033" />

</RelativeLayout>